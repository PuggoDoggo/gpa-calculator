---
interface Props {
  items: Array<{
    question: string;
    answer: string;
  }>;
}

const { items } = Astro.props;
---

<section class="faq-section py-12">
  <h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-8">
    Frequently Asked Questions
  </h2>

  <div class="space-y-4">
    {items.map((item, index) => (
      <details
        class="faq-item group bg-white border border-gray-200 rounded-lg"
        open={index === 0}
      >
        <summary class="flex items-center justify-between p-4 md:p-6 cursor-pointer list-none font-medium text-gray-900 hover:bg-gray-50">
          <span class="pr-4">{item.question}</span>
          <span class="faq-icon flex-shrink-0 w-5 h-5 text-gray-500 transition-transform group-open:rotate-180">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 11.168l3.71-3.938a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z" clip-rule="evenodd" />
            </svg>
          </span>
        </summary>
        <div class="px-4 md:px-6 pb-4 md:pb-6 text-gray-600 leading-relaxed">
          <Fragment set:html={item.answer} />
        </div>
      </details>
    ))}
  </div>
</section>

<style>
  .faq-item summary::-webkit-details-marker {
    display: none;
  }
</style>
